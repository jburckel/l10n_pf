<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- To solve bug 1240265, we have to delete all fiscal position templates before each update.
         The valid ones will be re-created later during the update.
         /!\ This must be executed *before* loading the fiscal position templates!! -->
    <delete model="account.fiscal.position.template" search="[('chart_template_id','=',ref('l10n_pf_pcg_chart_template'))]"/>


    <!-- = = = = = = = = = = = = = = = -->
    <!-- Fiscal Position Templates     -->
    <!-- = = = = = = = = = = = = = = = -->

        <record id="fiscal_position_template_detaxe" model="account.fiscal.position.template">
            <field name="sequence">50</field>
            <field name="name">DÃ©taxe</field>
            <field name="chart_template_id" ref="l10n_pf_pcg_chart_template"/>
            <field name="note">VAT exemption</field>
            <field name="auto_apply" eval="True" />
        </record>

    <!-- = = = = = = = = = = = = = = = -->
