<?xml version="1.0" encoding="utf-8" ?>
<odoo>


    <record id="tax_report" model="account.tax.report">
        <field name="name">Tax Report</field>
        <field name="country_id" ref="base.pf" />
    </record>

    <record id="tax_report_taxe_valeur_ajoutee" model="account.tax.report.line">
        <field name="name">I - TAXE SUR LA VALEUR AJOUTEE (TVA)</field>
        <field name="report_id" ref="tax_report" />
        <field name="sequence">1</field>
        <field name="formula">None</field>
    </record>

    <record id="tax_report_op_realisee" model="account.tax.report.line">
        <field name="name">A - OPERATIONS REALISEES</field>
        <field name="parent_id" ref="tax_report_taxe_valeur_ajoutee"/>
        <field name="report_id" ref="tax_report" />
        <field name="sequence">1</field>
        <field name="formula">None</field>
    </record>

    <record id="tax_report_op_imposable_ht" model="account.tax.report.line">
        <field name="name">Montant des op√©rations imposables Hors Taxes</field>
        <field name="parent_id" ref="tax_report_op_realisee"/>
        <field name="report_id" ref="tax_report" />
        <field name="sequence">1</field>
        <field name="formula">None</field>
    </record>

    <record id="tax_report_01" model="account.tax.report.line">
        <field name="name">01 - Ventes</field>
        <field name="tag_name">01</field>
        <field name="code">box_01</field>
        <field name="parent_id" ref="tax_report_op_imposable_ht"/>
        <field name="report_id" ref="tax_report" />
        <field name="sequence">1</field>
    </record>

    <record id="tax_report_02" model="account.tax.report.line">
        <field name="name">02 - Prestations de services</field>
        <field name="tag_name">02</field>
        <field name="code">box_02</field>
        <field name="parent_id" ref="tax_report_op_imposable_ht"/>
        <field name="report_id" ref="tax_report" />
        <field name="sequence">2</field>
    </record>

    <record id="tax_report_07_base" model="account.tax.report.line">
        <field name="name">Taux normal 16% (Base)</field>
        <field name="tag_name">07_base</field>
        <field name="code">box_07_base</field>
        <field name="parent_id" ref="tax_report_op_imposable_ht"/>
        <field name="report_id" ref="tax_report" />
        <field name="sequence">3</field>
    </record>

    <record id="tax_report_07_taxe" model="account.tax.report.line">
        <field name="name">Taux normal 16% (Taxe)</field>
        <field name="tag_name">07_taxe</field>
        <field name="code">box_07_taxe</field>
        <field name="parent_id" ref="tax_report_op_imposable_ht"/>
        <field name="report_id" ref="tax_report" />
        <field name="sequence">4</field>
    </record>


</odoo>